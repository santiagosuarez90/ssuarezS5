<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ssuarezS5.Insertar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INSERTAR ESTUDIANTES" FontSize="20" HorizontalTextAlignment="Center"
                 />
            <Entry x:Name="txtCodigo" Placeholder="Codigo" Keyboard="Numeric"></Entry>
            <Entry x:Name="txtNombre" Placeholder="Nombre" ></Entry>
            <Entry x:Name="txtApellido" Placeholder="Apellido " ></Entry>
            <Entry x:Name="txtEdad" Placeholder="Edad" ></Entry>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <Button x:Name="btnInsertar" Text="GUARDAR" Clicked="btnInsertar_Clicked" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>